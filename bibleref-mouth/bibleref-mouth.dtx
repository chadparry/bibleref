% \subsection{Selective Expansion}
%
% The commands in this section allow selective expansion of arguments.
%
% \begin{macro}{\brm@expandcs}
%   The \verb|\brm@expandcs|\marg{tokens} command recursively expands control
%   sequences in its argument, but leaves active characters and (some) accents
%   unexpanded. To implement this in an expandable way, the result is passed
%   through \cs{detokenize}, yielding characters of catcode ``other''. In the
%   current implementation, spaces in the input are skipped and new spaces are
%   inserted after each non-expandable control sequence.
%    \begin{macrocode}
 % See http://tex.stackexchange.com/a/47445
\long\def\fullyexpand#1{%
  \romannumeral-`0%
    \fullyexpandauxi{#1}{}%
}
\long\def\fullyexpandauxi#1{%
  % The space in the following line is deliberate: it will always finish the
  % \romannumeral before \fullyexpandauxii expands
  \expandafter\fullyexpandauxii\romannumeral-`0#1 \fullyexpandend
}
\long\def\fullyexpandauxii#1{%
  \ifx\fullyexpandend#1%
    \expandafter\fullyexpandend
  \else
    \expandafter\fullyexpandauxiii
  \fi
    {#1}%
}
\long\def\fullyexpandauxiii#1#2\fullyexpandend#3{%
  \expandafter\fullyexpandauxii\romannumeral-`0#2 \fullyexpandend{#3#1}%
}
\long\def\fullyexpandend#1#2{ #2}
\newcommand*{\brm@expandcs}[1]{%
  \fullyexpand{\brm@@expandcs\brm@marker #1\brm@endlist}%
}
%    \end{macrocode}
% \end{macro}
%
% \begin{macro}{\brm@@expandcs}
%   This is a helper for \cs{brm@expandcs} that considers the tokens one by one,
%   expanding them if appropriate.
%    \begin{macrocode}
\newcommand*{\brm@@expandcs}[2]{%
  \ifx #2\brm@endlist
    \expandafter\@gobble
  \else
    \expandafter\@firstofone
  \fi
  {%
    \ifx #1#2% if next CS is nonexpandable
      \expandafter\@firstoftwo
    \else
      \expandafter\@secondoftwo
    \fi
    {\detokenize{#2}\brm@@expandcs\brm@marker}%
    {%
      \ifcat\noexpand#2\relax% if next token is a control sequence
        \expandafter\@firstoftwo
      \else
        \expandafter\@secondoftwo
      \fi
      {%
        \ifx#2\"% if umlaut accent
          \expandafter\@firstoftwo
        \else
          \expandafter\@secondoftwo
        \fi
        {\detokenize{#2}\brm@@expandcs\brm@marker}%
        {%
          \ifx#2\'% if accent
            \expandafter\@firstoftwo
          \else
            \expandafter\@secondoftwo
          \fi
          {\detokenize{#2}\brm@@expandcs\brm@marker}%
          {\expandafter\brm@@expandcs\expandafter#2#2}%
        }%
      }%
      {%
        \ifcat\noexpand#2a% letter
          \expandafter\@firstoftwo
        \else
          \expandafter\@secondoftwo
        \fi
        {#2\brm@@expandcs\brm@marker}%
        {\detokenize{#2}\brm@@expandcs\brm@marker}%
      }%
    }%
  }%
}%
%    \end{macrocode}
% \end{macro}
